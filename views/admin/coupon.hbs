{{>adminHeader}}
{{>adminSide}}
{{>adminNavbar}}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Coupons</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/">Home</a></li>
                <li class="breadcrumb-item active">Coupons</li>
            </ol>
        </nav>
    </div>
    <div class="m-3"><a href="/admin/coupon/add" class="btn btn-primary offset-10">ADD Coupons</a></div>
    <table class="css-serial table table-info table-striped" style="color:rgb(0, 0, 255) !important;" id="table_id">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Expiry Date</th>
                <th scope="col">MIN-Amount</th>
                <th scope="col">MAX-Amount</th>
                <th scope="col">Percentage</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>{{#each coupon}}
            <tr>
                <td></td>
                <td>{{this.name}}</td>
                <td>{{this.expirydate}}</td>
                <td>{{this.minamount}}</td>
                <td>{{this.maxamount}}</td>
                <td>{{this.percentage}}</td>
                <td><a onclick="return confirm('Are you sure you want to delete {{this.name}}')"
                        href="/admin/coupon/delete/{{this._id}}"><i class="bi bi-trash text-danger"
                            style="font-size: x-large;"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</main>
{{>adminDown}}
<script src="/admin/assets/js/main.js"></script>