{{>adminHeader}}
{{>adminSide}}
{{>adminNavbar}}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Category</h1>
        <nav>
            <ol class="breadcrumb" >
                <li class="breadcrumb-item"><a href="/admin/">Home</a></li>
                <li class="breadcrumb-item active">Category</li>
            </ol>
        </nav>
    </div>
    <div class="m-3"><a href="/admin/category/add" class="btn btn-primary offset-10">ADD CATEGORY</a></div>
    <table class="css-serial table table-info" style="color:rgb(0, 0, 255) !important;" id="table_id">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Offers</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>{{#each category}}
            <tr>
                <td></td>
                <td>{{this.name}}</td>
                <td>{{this.offer}}</td>
                <td><a href="/admin/category/edit/{{this._id}}"><i class="bi bi-pencil-square text-success" style="font-size: x-large;"></i></a>
                    <a onclick="return confirm('Are you sure you want to delete {{this.name}}')"
                        href="/admin/category/delete/{{this._id}}"><i class="bi bi-trash text-danger" style="font-size: x-large;"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</main>
{{>adminDown}}
<script src="/admin/assets/js/main.js"></script>