<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
	<div class="container">
		<div class="p-b-10">
			<h3 class="ltext-103 cl5">
				Product Overview
			</h3>
		</div>
		<div class="flex-w flex-l-m filter-tope-group m-tb-10">
			<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
				All Products
			</button>
	{{#each category}}
			<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 list" data-filter=".{{this.name}}">
				{{this.name}}
			</button>
	{{/each}}
		</div>
		<div class="row isotope-grid">
			{{#each products}}
			<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item {{this.category}} itemBox">
				<!-- Block2 -->
				<div class="block2">
					<div class="block2-pic hov-img0"><a href="/products/details?id={{this._id}}">
							<img src="/product-img/{{this.imageFilename.[0]}}" alt="IMG-PRODUCT"></a>
						{{!-- <button href="/products/details/{{this._id}}"
							class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
							Quick View
						</button> --}}
					</div>

					<div class="block2-txt flex-w flex-t p-t-14">
						<div class="block2-txt-child1 flex-col-l ">
							<a href="/products/details/{{this._id}}"
								class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
								{{this.name}}
							</a>

							<span class="stext-105 cl3" style="text-decoration: line-through;">
								Price: {{this.price}}
							</span>
							<span class="stext-105 cl3 text-primary">
								Offer Price: {{this.offerprice}}
							</span>
							<span class="badge badge-danger mt-1 mb-1">{{this.category}}</span>
						</div>
					</div>
					<div style="width: 65% !important;float: left;">
						<button onclick="addToCart('{{this._id}}')" class="btn btn-block btn-outline-success "><span
								style="font-weight:600;">ADD TO CART</span></button>
					</div>
					<div style="float: left;width:30%;">
						<button onclick="addWish('{{this._id}}')" class="btn btn-block text-white "
							style="background-color:#717fe0;font-weight: bolder;margin-left: 16%;">
							wishlist
						</button>
					</div>
				</div>
			</div>
			{{/each}}
