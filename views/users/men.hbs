{{>userNavbar}}

<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('/alt-img/men.jpg'); height: 70%;">
    <h2 class="ltext-105 cl0 txt-center" style="padding-top:6%;">
        M E N
    </h2>
</section>
<section class="">
    <div class="p-b-10 align-middle m-5">
        <h3 class="ltext-103 cl5 ">
            Product Overview
        </h3>
    </div>
    <div class="row isotope-grid">
        {{#each products}}
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item {{this.category}} itemBox">
            <!-- Block2 -->
            <div class="block2">
                <div class="block2-pic hov-img0"><a href="/products/details?id={{this._id}}">
                        <img src="/product-img/{{this.imageFilename.[0]}}" alt="IMG-PRODUCT"></a>

                    {{!-- <button href="/products/details/{{this._id}}"
                        class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                        Quick View
                    </button> --}}
                </div>

                <div class="block2-txt flex-w flex-t p-t-14">
                    <div class="block2-txt-child1 flex-col-l ">
                        <a href="/products/details/{{this._id}}"
                            class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                            {{this.name}}
                        </a>

                        <span class="stext-105 cl3" style="text-decoration: line-through;">
                            Price: {{this.price}}
                        </span>
                        <span class="stext-105 cl3 text-primary">
                            Offer Price: {{this.offerprice}}
                        </span>
                    </div>

                    <div class="block2-txt-child2 flex-r p-t-3">
                        <a onclick="addWish('{{this._id}}')" class="btn-addwish-b2 dis-block pos-relative ">
                            <img class="icon-heart1 dis-block trans-04" src="/users/images/icons/icon-heart-01.png"
                                alt="ICON">
                            <img class="icon-heart2 dis-block trans-04 ab-t-l"
                                src="/users/images/icons/icon-heart-02.png" alt="ICON">
                        </a>
                    </div>
                </div>
                <div>
                    <button onclick="addToCart('{{this._id}}')" class="btn btn-block btn-outline-success "><span
                            style="font-weight:600;">ADD TO CART</span></button>
                </div>
            </div>
        </div>
        {{/each}}
        <!-- Load more -->
        {{!-- <div class="flex-c-m flex-w w-full p-t-45">
            <a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Load More
            </a>
        </div> --}}
    </div>
</section>

